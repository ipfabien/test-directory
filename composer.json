{
    "name": "fabien/contacts-microservice",
    "description": "Micro service REST d'annuaire de contacts sous Symfony 5.4 (PHP 7.4).",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/framework-bundle": "5.4.*",
        "symfony/http-kernel": "5.4.*",
        "symfony/http-foundation": "5.4.*",
        "symfony/routing": "5.4.*",
        "symfony/dependency-injection": "5.4.*",
        "symfony/config": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/console": "5.4.*",
        "symfony/yaml": "5.4.*",
        "symfony/uid": "5.4.*",
        "symfony/security-bundle": "5.4.*",
        "doctrine/dbal": "^3.0",
        "doctrine/migrations": "^3.0",
        "doctrine/doctrine-bundle": "^2.7",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "webmozart/assert": "^1.11",
        "firebase/php-jwt": "^6.10"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4.0"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix",
        "phpstan": "phpstan analyse"
    }
}